<!DOCTYPE html>
<html lang="en">

<head>
    {{>navlinks}}
    <title>Weather App | Home</title>
</head>

<body>
    <div class="container container-fluid">
        <!-- Navbar -->
        {{>navbar}}
        <hr style="margin: 0;">
        <div class="main_content">
            <form id="form">
                <input type="text" id="citySearch" class="form-control" id="inputAddress" placeholder="Search for the city" autocomplete="off">
                 <button type="submit" class="btn btn-primary" id="searchBtn">Search</button>
            </form>
            <div class="tempInfo">
                <div class="top_layer">
                    <p id="day">----</p>
                    <p id="date">----</p>
                </div>
                <div class="main_layer">
                    <p id="city">----</p>
                    <div class="middlelayer data_hide">
                        <p id="temp">----</p>
                    </div>
                </div>
                <div class="min_max">
                    <p id="min_temp">----</p>
                    <p id="max_temp">----</p>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
